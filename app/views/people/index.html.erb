
<h1>Listing People</h1>

<table class="table">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Full name</th>
      <th>Encrypted email</th>
      <th>Title</th>
      <th>Gender</th>
      <th>Encrypted phone</th>
      <th>Renew member since</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.first_name %></td>
        <td><%= person.last_name %></td>
        <td><%= person.full_name %></td>
        <td><%= person.encrypted_email %></td>
        <td><%= person.title %></td>
        <td><%= person.gender %></td>
        <td><%= person.encrypted_phone %></td>
        <td><%= person.renew_member_since %></td>
        <td><%= link_to 'Show', person %></td>
        <td><%= link_to 'Edit', edit_person_path(person) %></td>
        <td><%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

