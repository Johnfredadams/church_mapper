
<h1>Listing Churches</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Parish</th>
      <th>Locality</th>
      <th>Diocese</th>
      <th>Postcode</th>
      <th>Status</th>
      <th>Description</th>
      <th>Vacant</th>
      <th>Start month</th>
      <th>Start year</th>
      <th>Incumbent name</th>
      <th>Incumbent age</th>
      <th>Incumbent age approx</th>
      <th>Incumbent start month</th>
      <th>Incumbent start year</th>
      <th>Average weekly attendance</th>
      <th>Number of clergy employed</th>
      <th>Number of staff</th>
      <th>Funding</th>
      <th>Cofe status</th>
      <th>Network</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @churches.each do |church| %>
      <tr>
        <td><%= church.name %></td>
        <td><%= church.parish %></td>
        <td><%= church.locality %></td>
        <td><%= church.diocese.name %></td>
        <td><%= church.postcode %></td>
        <td><%= church.renew_status %></td>
        <td><%= church.description %></td>
        <td><%= church.vacant %></td>
        <td><%= church.start_month %></td>
        <td><%= church.start_year %></td>
        <td><%= church.incumbent_name %></td>
        <td><%= church.incumbent_age %></td>
        <td><%= church.incumbent_age_approx %></td>
        <td><%= church.incumbent_start_month %></td>
        <td><%= church.incumbent_start_year %></td>
        <td><%= church.average_weekly_attendance %></td>
        <td><%= church.number_of_clergy_employed %></td>
        <td><%= church.number_of_staff %></td>
        <td><%= church.funding %></td>
        <td><%= church.cofe_status %></td>
        <td><%= church.network %></td>
        <td><%= link_to 'Show', church %></td>
        <td><%= link_to 'Edit', edit_church_path(church) %></td>
        <td><%= link_to 'Destroy', church, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

