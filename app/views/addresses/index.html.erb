
<h1>Listing Addresses</h1>

<table class="table">
  <thead>
    <tr>
      <th>Encrypted address</th>
      <th>Encrypted postcode</th>
      <th>Encrypted landline</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.encrypted_address %></td>
        <td><%= address.encrypted_postcode %></td>
        <td><%= address.encrypted_landline %></td>
        <td><%= link_to 'Show', address %></td>
        <td><%= link_to 'Edit', edit_address_path(address) %></td>
        <td><%= link_to 'Destroy', address, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Address', new_address_path %>
